<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dk.itu.energyfutures.ble"
    android:versionCode="5"
    android:versionName="2" >

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />
    

    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="BLEoT"
        android:theme="@android:style/Theme.Holo.Light" 
        android:name="dk.itu.energyfutures.ble.Application" android:logo="@drawable/ic_launcher">
        <activity android:name="dk.itu.energyfutures.ble.activities.LocationListActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:parentActivityName="dk.itu.energyfutures.ble.activities.LocationListActivity" android:name="dk.itu.energyfutures.ble.activities.LocationActivity" />
        <activity android:parentActivityName="dk.itu.energyfutures.ble.activities.LocationListActivity" android:name="dk.itu.energyfutures.ble.activities.MoteListActivity" />
        <activity android:parentActivityName="dk.itu.energyfutures.ble.activities.MoteListActivity" android:name="dk.itu.energyfutures.ble.activities.DeviceConfigActivity" />

        <service
            android:name="dk.itu.energyfutures.ble.BluetoothLEBackgroundService"
            android:enabled="true"
            android:exported="false"
            android:singleUser="true"
            />
    </application>

</manifest>